@model ShopNoiThat.Models.Product_User
@{
    ViewBag.Title = "Đặt hàng theo yêu cầu";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@Html.Action("Mainmenu", "module")
<div class="row" style="margin-top:100px">
    <div class="col-md-3">

    </div>
    <div class="col-md-6" >
        @using (Html.BeginForm("DatHang", "Cart", FormMethod.Post, new { enctype = "Multipart/form-data" }))

        {

            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="breadcrumb-wp">
                    <ol class="breadcrumb">
                        <li class="active">Thông tin đặt hàng</li>
                    </ol>
                </div>
                <hr />

                <div class="form-group">
                    <div class="control-label col-md-2 ">Tên sản phẩm</div>
                    <div class="col-md-12">
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.NameProduct, new { @class = "form-control ", @required = "" })

                            @Html.ValidationMessageFor(model => model.NameProduct, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3">Hình ảnh sản phẩm</div>
                    <div class="col-md-12">
                        <input type="file" id="UploadImage" name="UploadImage" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">Mô tả</div>
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.Description, new { rows = "5", cols = "120", @required = "", @class = "form-control " })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Đặt hàng" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-3">

    </div>
</div>
